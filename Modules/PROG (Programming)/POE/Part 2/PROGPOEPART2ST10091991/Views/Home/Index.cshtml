@{
    ViewData["Title"] = "Welcome Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4">@ViewData["WelcomeMessage"]</h1>
            <p class="lead">A world green and happy.</p>
            <div class="mt-4">
                <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg mr-3">Login</a>
                <a asp-controller="Register" asp-action="Index" class="btn btn-secondary btn-lg">Register</a>
            </div>
        </div>
    </div>
</div>
